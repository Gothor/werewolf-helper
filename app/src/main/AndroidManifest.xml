<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gothor.werefolfhelper">

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/wh_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/wh_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PlayersActivity" android:screenOrientation="portrait" />
        <activity android:name=".CardsActivity" android:screenOrientation="portrait" />
        <activity android:name=".PlayActivity" android:screenOrientation="portrait" />
        <activity android:name=".ContactListActivity" android:screenOrientation="portrait" />
    </application>

</manifest>