<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="left"
        android:scaleType="fitStart"
        android:src="@drawable/background_picture" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/title"
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuration de la partie"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Werewolves -->

        <TextView
            android:id="@+id/werewolves"
            style="@style/Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loups-garous"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <ImageView
            android:id="@+id/werewolves_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/werewolves" />

        <Button
            android:id="@+id/werewolves_minus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button"
            android:text="-"
            app:layout_constraintBottom_toBottomOf="@id/werewolves_picture"
            app:layout_constraintLeft_toRightOf="@id/werewolves_picture"
            app:layout_constraintTop_toBottomOf="@id/werewolves" />

        <TextView
            style="@style/BigNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            app:layout_constraintBottom_toBottomOf="@id/werewolves_picture"
            app:layout_constraintLeft_toRightOf="@id/werewolves_minus"
            app:layout_constraintRight_toLeftOf="@+id/werewolves_plus"
            app:layout_constraintTop_toBottomOf="@id/werewolves" />

        <Button
            android:id="@+id/werewolves_plus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/button"
            android:src="@mipmap/ic_launcher"
            android:text="+"
            app:layout_constraintBottom_toBottomOf="@id/werewolves_picture"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/werewolves" />

        <!-- Villagers -->

        <TextView
            android:id="@+id/villagers"
            style="@style/Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Villageois"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/werewolves_picture" />

        <ImageView
            android:id="@+id/villagers_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/villagers" />

        <Button
            android:id="@+id/villagers_minus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button"
            android:text="-"
            app:layout_constraintBottom_toBottomOf="@id/villagers_picture"
            app:layout_constraintLeft_toRightOf="@id/villagers_picture"
            app:layout_constraintTop_toBottomOf="@id/villagers" />

        <TextView
            style="@style/BigNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            app:layout_constraintBottom_toBottomOf="@id/villagers_picture"
            app:layout_constraintLeft_toRightOf="@id/villagers_minus"
            app:layout_constraintRight_toLeftOf="@+id/villagers_plus"
            app:layout_constraintTop_toBottomOf="@id/villagers" />

        <Button
            android:id="@+id/villagers_plus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/button"
            android:src="@mipmap/ic_launcher"
            android:text="+"
            app:layout_constraintBottom_toBottomOf="@id/villagers_picture"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/villagers" />

        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button"
            android:text="DÃ©marrer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>
</RelativeLayout>