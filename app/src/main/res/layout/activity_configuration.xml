<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Title"
        android:id="@+id/title"
        android:text="Configuration de la partie"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Werewolves -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:id="@+id/werewolves"
        android:text="Loups-garous"
        style="@style/Title2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/werewolves_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/werewolves"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@id/werewolves_picture"
        app:layout_constraintLeft_toRightOf="@id/werewolves_picture"
        app:layout_constraintTop_toBottomOf="@id/werewolves"
        android:id="@+id/werewolves_minus"
        android:background="@drawable/button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/werewolves"
        app:layout_constraintLeft_toRightOf="@id/werewolves_minus"
        app:layout_constraintRight_toLeftOf="@+id/werewolves_plus"
        app:layout_constraintBottom_toBottomOf="@id/werewolves_picture"
        android:text="2"
        style="@style/BigNumber" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/werewolves"
        app:layout_constraintBottom_toBottomOf="@id/werewolves_picture"
        android:text="+"
        android:id="@+id/werewolves_plus"
        android:background="@drawable/button"/>

    <!-- Villagers -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/werewolves_picture"
        android:id="@+id/villagers"
        android:text="Villageois"
        style="@style/Title2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/villagers_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/villagers"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@id/villagers_picture"
        app:layout_constraintLeft_toRightOf="@id/villagers_picture"
        app:layout_constraintTop_toBottomOf="@id/villagers"
        android:id="@+id/villagers_minus"
        android:background="@drawable/button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/villagers"
        app:layout_constraintLeft_toRightOf="@id/villagers_minus"
        app:layout_constraintRight_toLeftOf="@+id/villagers_plus"
        app:layout_constraintBottom_toBottomOf="@id/villagers_picture"
        android:text="6"
        style="@style/BigNumber" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/villagers"
        app:layout_constraintBottom_toBottomOf="@id/villagers_picture"
        android:text="+"
        android:id="@+id/villagers_plus"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="DÃ©marrer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button"/>

</android.support.constraint.ConstraintLayout>